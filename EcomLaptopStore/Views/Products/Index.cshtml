@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<div class="row">
    @foreach (var item in Model)
	{
    <div class="col-md-4 col-xs-6 border-primary" mb-3>
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-title">
                            <h5 class="card-title">
                                @item.Name
                                <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                    <img src="@item.ImageURL" width="100%" alt="@item.Name" />
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text">@item.LaptopBrand</p>
                        <p class="card-text"><b>Description: </b>@item.Description</p>
                        <p class="card-text"><b>Specification: </b>@item.Specification</p>
                        <p class="card-text"><b>Price: </b>@item.Price.ToString("c")</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye-fill"></i> Show details</a>
                            <a class="btn btn-success text-white" asp-action="Cart"><i class="bi bi-cart-plus"></i> Add to Cart Price @item.Price.ToString("c")</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
	}
</div>

<div style="position:fixed; right: 25px; bottom: 25px" class="text-white">
    <a asp-controller="Products" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>
</div>
